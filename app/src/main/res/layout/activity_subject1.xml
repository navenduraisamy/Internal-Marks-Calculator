<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    tools:context=".Subject1">

    <TextView
        android:id="@+id/course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:text="Course Name"
        android:textAlignment="center"
        android:textColor="#808080"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko"
        android:paddingBottom="10dp"
        android:text="Course Code"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko"
        android:paddingBottom="10dp"
        android:text="Continuous Assesment"
        android:textAlignment="center"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/pre1"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:background="@drawable/borders"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="CA1"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/pre2"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CA2"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borders"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/ca3"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CA3"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borders"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amiko"
        android:paddingBottom="10dp"
        android:text="Assesment Tutorial"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/rep1"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:background="@drawable/borders"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="Tutorial1"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/rep2"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/borders"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="Tutorial2"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amiko"
        android:paddingBottom="10dp"
        android:text="Assignment Presentation"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ap"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:background="@drawable/borders"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="Presentation"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/nextBtn2"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NEXT" />

</LinearLayout>
